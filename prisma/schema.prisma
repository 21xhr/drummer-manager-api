////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// USER TABLE (from database structure - User.csv)
model User {
  // Primary Key and ID
  id                          Int       @id @default(autoincrement()) @map("user_id") // Maps to 'user_id'
  platformId                  String    @unique @map("user_platform_id") // Maps to 'user_platform_id' - Unique identifier on the source platform
  platformName                String    @map("platform_name")
  
  // Balance and Activity Tracking
  lastKnownBalance            Int       @map("last_known_balance") @default(0) // Local cache of NUMBERS balance
  lastBalanceUpdate           DateTime? @map("last_balance_update")
  lastActivityTimestamp       DateTime? @map("last_activity_timestamp")
  lastLiveActivityTimestamp   DateTime? @map("last_live_activity_timestamp")
  
  // Game/Stream Stats
  lastSeenStreamDay           Int       @map("last_seen_stream_day") @default(0)
  activeOfflineDaysCount      Int       @map("active_offline_days_count") @default(0)
  activeStreamDaysCount       Int       @map("active_stream_days_count") @default(0)
  dailyChallengeCount         Int       @map("daily_challenge_count") @default(0) // Used for quadratic submission cost N
  dailyChallengeResetAt       DateTime  @map("daily_challenge_reset_at")
  totalNumbersSpentGameWide   Int       @map("total_numbers_spent_game_wide") @default(0)
  totalChallengesSubmitted    Int       @map("total_challenges_submitted") @default(0)

  // Relations (one-to-many) - Define these for Prisma
  challenges                  Challenge[] @relation("Proposer") // Challenges proposed by this user
  pushes                      Push[]
  tempQuotes                  TempQuote[]

  @@map("users") // Set the table name explicitly
}


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// STREAM STATS TABLE (from database structure - Stream Stats.csv)
model StreamStat {
  id                          Int       @id @default(autoincrement()) // Only one record is needed for the global counter
  streamDaysSinceInception    Int       @map("stream_days_since_inception") @default(0)
  
  // Set the table name explicitly
  @@map("stream_stats") 
}


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// CHALLENGES TABLE (from database structure - Challenges.csv)
model Challenge {
  // Primary Key and ID
  challengeId                   Int       @id @default(autoincrement()) @map("challenge_id")
  challengeText                 String    @map("challenge_text")
  category                      String    @map("category")
  durationType                  String    @map("duration_type") // e.g., ONE_OFF, RECURRING
  
  // Relations: Foreign Key to User
  proposerUserId                Int       @map("proposer_user_id")
  proposer                      User      @relation("Proposer", fields: [proposerUserId], references: [id])
  
  // Status and Tracking
  status                        String    @map("status") // e.g., Active, In Progress, Completed, Archived
  isExecuting                   Boolean   @map("is_executing") @default(false)
  hasBeenAuctioned              Boolean   @map("has_been_auctioned") @default(false)
  hasBeenDiggedOut              Boolean   @map("has_been_digged_out") @default(false)

  // Financials and Metrics
  auctionCost                   Int       @map("auction_cost")
  pushPrice                     Int       @map("push_price")
  disruptCount                  Int       @map("disrupt_count") @default(0)
  numbersRaised                 Int       @map("numbers_raised") @default(0)
  totalNumbersSpent             Int       @map("total_numbers_spent") @default(0)
  totalPush                     Int       @map("total_push") @default(0)
  
  // Clocks and Timestamps
  streamDaysSinceActivation     Int       @map("stream_days_since_activation") @default(0) // The 21-Day Clock
  timestampSubmitted            DateTime  @map("timestamp_submitted")
  timestampLastActivation       DateTime  @map("timestamp_last_activation")
  timestampCompleted            DateTime? @map("timestamp_completed") // Nullable

  // Calculated Metrics (Prisma doesn't support calculated fields, so this is tracked)
  uniquePusher                  Int       @map("unique_pusher") @default(0)

  // Relations (one-to-many) - Define these for Prisma
  pushes                        Push[]
  tempQuotes                    TempQuote[]

  @@map("challenges") // Set the table name explicitly
}


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// PUSHES TABLE (from database structure - Pushes.csv)
model Push {
  pushId                        Int       @id @default(autoincrement()) @map("push_id")

  // Relations: Foreign Keys
  challengeId                   Int       @map("challenge_id")
  challenge                     Challenge @relation(fields: [challengeId], references: [challengeId])

  userId                        Int       @map("user_id")
  user                          User      @relation(fields: [userId], references: [id])
  
  // Transaction Data
  cost                          Int       @map("cost") // The final NUMBERS cost paid
  timestamp                     DateTime  @map("timestamp")

  @@map("pushes") // Set the table name explicitly
}


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// TEMP QUOTES TABLE (from database structure - Temp Quotes.csv)
model TempQuote {
  // Primary Key
  quoteId                       String    @id @map("quote_id") // Using String for UUID/Text-based ID if preferred over Int
  
  // Relations: Foreign Keys
  userId                        Int       @map("user_id")
  user                          User      @relation(fields: [userId], references: [id])

  challengeId                   Int       @map("challenge_id")
  challenge                     Challenge @relation(fields: [challengeId], references: [challengeId])

  // Quote Data
  quantity                      Int       @map("quantity") // The N value for the transaction
  quotedCost                    Int       @map("quoted_cost") // The exact quadratic cost
  timestampCreated              DateTime  @map("timestamp_created") @map("timestamp_created") // Used for 30-second expiration
  isLocked                      Boolean   @map("is_locked") @default(false) // Race condition protection

  @@map("temp_quotes") // Set the table name explicitly
}


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// STREAMS TABLE (from database structure - Streams.csv)
model Stream {
  streamSessionId                 Int       @id @default(autoincrement()) @map("stream_session_id")

  // Relations: Foreign Key to StreamStat (Global Counter)
  currentStreamNumber             Int       @map("current_stream_number") // Links to Stream_Stats.stream_days_since_inception
  
  // Timestamps and Metrics
  startTimestamp                  DateTime  @map("start_timestamp")
  endTimestamp                    DateTime? @map("end_timestamp") // Nullable if stream is ongoing
  durationMinutes                 Int?      @map("duration_minutes") // Nullable

  // Session Stats (Accumulated during the session)
  totalPushesInSession            Int       @map("total_pushes_in_session") @default(0)
  totalNumbersSpentOnPush         Int       @map("total_numbers_spent_on_push") @default(0)
  totalDigoutsInSession           Int       @map("total_digouts_in_session") @default(0)
  totalNumbersSpentOnDigout       Int       @map("total_numbers_spent_on_digout") @default(0)
  totalDisruptsInSession          Int       @map("total_disrupts_in_session") @default(0)
  totalNumbersSpentOnDisrupt      Int       @map("total_numbers_spent_on_disrupt") @default(0)
  totalNumbersSpentInSession      Int       @map("total_numbers_spent_in_session") @default(0)
  
  // Status
  hasBeenProcessed                Boolean   @map("has_been_processed") @default(false)

  @@map("streams") // Set the table name explicitly
}


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// MISSIONS TABLE (from database structure - Missions (future enhancement).csv)
model Mission {
  missionId                     Int       @id @default(autoincrement()) @map("mission_id")
  title                         String?   @map("title") // Optional
  description                   String    @map("description")
  
  // Goal Tracking
  targetType                    String    @map("target_type") // e.g., NUMBERS_SPENT_ON_SUGGESTION
  targetValue                   Int       @map("target_value")
  currentValue                  Int       @map("current_value") @default(0)
  
  // Status and Timestamps
  isExecuting                   Boolean   @map("is_executing") @default(false)
  dateCreated                   DateTime  @map("date_created")
  dateCompleted                 DateTime? @map("date_completed") // Nullable when incomplete

  @@map("missions") // Set the table name explicitly
}

